<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Notifications">

        <SwitchPreference
            app:key="notifications"
            app:title="Enable notifications"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="Messages">

        <EditTextPreference
            app:key="signature"
            app:title="SMS Signature"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="account_number"
            app:title="Account Number"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>